<h1>Tags#index</h1>

<p class="mbs"><%= link_to 'New tag', new_tag_path, class: 'btn' %></p>


<table class="table hover">
  <col />
  <col width="120">
  <col width="80" span="3">
  <thead>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th colspan="3">&nbsp;</th>
  </tr>
  </thead>
  <tbody>
  <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td class="tag-category-<%= tag.category %>"><%= tag.category %></td>
        <td class="action-cell"><%= link_to 'Show', tag_path(tag) %></td>
        <td class="action-cell warning"><%= link_to 'Edit', edit_tag_path(tag) %></td>
        <td class="action-cell danger"><%= link_to 'Destroy', tag_path(tag),
                                                   method: :delete,
                                                   data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>