<%= form_for @tag do |f| %>

    <% if @tag.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@tag.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @tag.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p><%= f.label :name %><br>
      <%= f.text_field :name %></p>

    <p><%= f.label :type %></p>
    <p><%= f.radio_button :type, :general %> General</p>
    <p><%= f.radio_button :type, :title %> Title</p>
    <p><%= f.radio_button :type, :character %> Character</p>

    <p><%= f.submit %></p>
<% end #form %>