<aside id="wall-nav">
  <div>
    <section class="taglist">
      <h2>Colors</h2>
      <div class="color_palette">
      <% @wall.colors.each do |color| %>
        <%= color_link(color) %>
      <% end %>
      </div>
    </section>

    <section class="taglist">
      <h2>Tags</h2>
      <%= tags_list @wall.tags %>
    </section>

    <section class="datalist">
      <h2>Informations</h2>

      <header>
        <div class="rating rating-<%= @wall.purity %>">
          <%= @wall.purity %>
        </div>

        <div class="category">
          <%= @wall.category %>
        </div>

      </header>

      <dl>
        <dt>Resolution</dt>
        <dd><%= @wall.width %> x <%= @wall.height %></dd>

        <dt>Size</dt>
        <dd><%= number_to_human_size(@wall.size) %></dd>

        <dt>Added</dt>
        <dd><%= time_ago_in_words(@wall.created_at) %> ago</dd>
      </dl>
    </section>

  </div>


  <footer>
    <a href="#" data-toggle="wall-edit" data-wall-id="<%= @wall.id %>"><i class="fa fa-pencil-square-o"></i> Edit wallpaper</a>
  </footer>
</aside>

<div id="wall-display">
  <div class="fit">
    <%= wallpaper_image_tag(@wall, id: 'wallpaper') %>
  </div>

  <div class="wallpaper-dl-btn">
    <a href="<%= wallpaper_dl_path(@wall) %>" class=""><i class="fa fa-download fa-fw"></i></a>
  </div>
</div>

<%= render 'wall_edit' %>
