<aside id="wall-nav" class="flex-container-v pas">

  <section class="taglist">
    <h2>Colors</h2>
    <div class="color_palette">
      <% @wall.colors.each do |color| %>
        <%= color_link(color) %>
      <% end %>
    </div>
  </section>

  <section class="taglist">
    <h2>Tags</h2>
    <ul class="pa0 ma0 unstyled">

<% @wall.tags.each do |tag| %>
      <li><a href="#" class="<%= tag.type.to_s %>"><%= tag.name %><span><%= @tagCount[tag.id] %></span></a></li>
<% end %>

    </ul>
  </section>

  <section class="datalist">
    <h2>Informations</h2>

    <dl>
      <dt>Purity</dt>
      <dd><%= @wall.purity %></dd>

      <dt>Resolution</dt>
      <dd><%= @wall.width %> x <%= @wall.height %></dd>

      <dt>Size</dt>
      <dd><%= number_to_human_size(@wall.size) %></dd>

      <dt>Category</dt>
      <dd><%= @wall.category %></dd>

      <dt>Added</dt>
      <dd><%= time_ago_in_words(@wall.created_at) %> ago</dd>
    </dl>
  </section>



  <footer>
    <a href="#wall-edit-modal" rel="modal:open"><i class="fa fa-pencil-square-o"></i> Edit wallpaper</a>
  </footer>
</aside>

<div id="wall-display">
  <div class="fit">
    <%= wallpaper_image_tag(@wall, id: 'wallpaper') %>
  </div>

  <div class="wallpaper-dl-btn">
    <a href="<%= wallpaper_dl_path(@wall) %>" class="btn-floating btn-large"><i class="fa fa-download fa-2x"></i></a>
  </div>
</div>

<div id="wall-edit-modal" class="modal">

  <%= form_tag :wallpaper_edit, :method => 'post' do %>
      <h3 class="pa0 ma0">Edit wallpaper</h3>


      <label for="edit-field"><i class="fa fa-pencil-square-o fa-2x fa-fw"></i></label><!--
        --><%= text_field_tag :edqu, nil, :id => 'edit-field', :placeholder => 'edit string', :autocomplete => 'off' %>
      <button type="submit">Ok</button>

  <% end %>

</div>
